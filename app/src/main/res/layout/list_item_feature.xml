<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_16">

    <ImageView
        android:id="@+id/img_feature_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_security_24"
        app:layout_constraintEnd_toEndOf="@id/tv_feature_name"
        app:layout_constraintStart_toStartOf="@id/tv_feature_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_feature_name"
        style="@style/TextStyle"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_marginVertical="@dimen/margin_8"
        android:text="5 year guarantee"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_feature_image" />

</androidx.constraintlayout.widget.ConstraintLayout>